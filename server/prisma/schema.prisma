generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  isAdmin   Boolean      @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

   // Relations
  cartItems    CartItem[]
  orders       Order[]
  addresses    Address[]
  reviews      Review[]
}
